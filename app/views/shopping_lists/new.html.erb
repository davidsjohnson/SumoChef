<% provide(:title, 'New Shopping List') %>
<h1>Create a new shopping list</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@shopping_list) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :description %>
			<%= f.text_field :description %>

			<%= f.label :state %>
			<%= f.select :state, [["Active"], ["Inactive"]] %>

			<%= f.submit "Create my shopping list", class: "btn btn-large btn-primary" %>

		<% end %>
	</div>
</div>